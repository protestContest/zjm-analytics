<header class='page-header'>
  <h1 class='h1'><%= @site.name %></h1>
  <% if @site.url %>
  <h2 class='h2'><%= @site.url %></h2>
  <% end %>
  <div class='page-header__actions'>
    <%= link_to 'Edit Site', edit_site_path, class: 'button primary' %>
  </div>
</header>


<h2><%= @num_hits %> hits</h2>
<ul>
<% @hits.each do |hit| %>
  <li><%= hit.Day %>: <%= hit.day_hits %>
<% end %>
</ul>
<h2>Tracking Code</h2>
<%= render "tracking_code" %>
<ul>
  <li><%= link_to 'Edit', edit_site_path %>
  <li><%= link_to 'Delete', @site, method: :delete %>
</ul>
