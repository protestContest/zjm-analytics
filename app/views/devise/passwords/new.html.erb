<header class='page-header'>
  <h1 class='h1'>Forgot your password?</h1>
</header>

<div class='row'>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form col-4 offset-4' }) do |f| %>
    <%= devise_error_messages! %>

    <div class="form__row">
      <%= f.label :email, class: 'label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
    </div>

    <div class="form__row">
      <%= f.submit "Send reset email", class: 'button button--large' %>
    </div>
  <% end %>
</div>
<div class='row'>
  <div class='col-4 offset-4'>
  <%= render "devise/shared/links" %>
  </div>
</div>
