<h1 class='h1'>Resend confirmation instructions</h1>

<div class='col-4 offset-4'>
<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form__row">
    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
  </div>

  <div class="form__row">
    <%= f.submit "Resend confirmation instructions", class: 'button' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
