<header class='page-header'>
  <h1 class='h1'>Log in</h1>
</header>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form col-4 offset-4" }) do |f| %>
  <div class="form form__row">
    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input' %>
  </div>

  <div class="form form__row">
    <%= f.label :password, class: 'label' %>
    <%= f.password_field :password, autocomplete: "current-password", class: 'input' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form form__row">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="form form__row">
    <%= f.submit "Log in", class: 'button button--large' %>
  </div>
<% end %>

<div class='col-4 offset-4'>
<%= render "devise/shared/links" %>
</div>
