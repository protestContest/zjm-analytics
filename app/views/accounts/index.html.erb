<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.owner %></td>
        <td><%= link_to 'Show', [account.owner, account] %></td>
        <td><%= link_to 'Edit', edit_user_account_path(account.owner, account) %></td>
        <td><%= link_to 'Destroy', [account.owner, account], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_user_account_path(current_user) %>
